<div class="product__content">
  <div class="product__reviews">
    <h2 class="product__review-title">{{ 'product.customer_reviews' | t }}</h2>
    <div id="yotpo-pr" class="yotpo yotpo-main-widget" data-product-id="{{ product.id }}" data-name="{{ product.title | escape }}" data-url="{{ shop.url }}{{ product.url }}" data-image-url="{{ product.featured_image | product_img_url: "large" |replace: '?', '%3F' | replace: '&','%26'}}" data-description="{{ product.description | escape }}"></div>
  </div>
</div>