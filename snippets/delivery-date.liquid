{% if form_type == 'quick' %}
<div class="pf-container pf-container--datepicker" id="datepicker-container--{{ form_type }}">
  <div class="pf-element">
    <label class="pf-label" for="datepicker--{{ form_type }}">
      <span>{{ 'products.product.delivery_date' | t }}</span>
    </label>
    {% render 'icon' with icon: 'custom-calendar', class: 'pf-input-datepicker-icon' %}
    <input disabled placeholder="{{ 'delivery_date.loading' | t }}" id="datepicker--{{ form_type }}" type="text" class="pf-input pf-input-datepicker pf-input-datepicker--product disabled"/>
    <div id="datepicker-msg--{{ form_type }}" class="pf-input-datepicker-msg"></div>
  </div>
</div> 
{% else %}
<div class="pf-container--datepicker--static" id="datepicker-container--{{ form_type }}">
   <div onclick="handleOpenDDate()"> {% render 'icon' with icon: 'custom-calendar', class: 'pf-input-datepicker-icon--static', id:'svgCalendar'%}</div>
    <div class="pf-element--static"id="label_date" >
      <div class="pf-label--static">
        <span>
          {{ 'delivery_date.best_delivery_pre' | t }}
          <span class="recommendation-text">
            {{'delivery_date.best_delivery_days' | t }}
          </span> 
          {{ 'delivery_date.best_delivery_post_noday' | t }}
          {{ 'delivery_date.best_delivery_event' | t }}
          <a class="recommendation-text" onclick="handleOpenCalendar()">
            <u>{{ 'delivery_date.best_delivery_set' | t }}
            </u>
          </a>
        </span>
      </div>
      <label id="label_picker"class="pf-label-background" for="datepicker--{{ form_type }}"></label>
      <input disabled placeholder="{{ 'delivery_date.loading' | t }}" id="datepicker--{{ form_type }}" type="text" class="pf-input-datepicker pf-input-datepicker--static disabled" autocomplete="off"/>
      <span style="display:none"class="not_available_date"id="available_span" onclick="handleOpenDDate()">{{'delivery_date.not_available2' | t }}</span>
      <div class="pf-input-datepicker-msg datepicker__msg visible">
        <span class="datepicker__msg-content">{{ 'delivery_date.48_hour_title' | t }}</span>
        <span class="datepicker__msg-icon">&nbsp;<u>Delivery Window</u>.<div class="datepicker__msg-tooltip">{{ 'delivery_date.48_hour_description' | t }}</div></span>
        <span>&raquo;{{ 'products.product.shipping_policy_html' | t: link: shop.shipping_policy.url }}</span>
      </div>
      <div id="datepicker-msg--error" style="display: none;" class="pf-input-datepicker-msg visible error">Please select a valid delivery date</div>
    </div>
</div> 
{% endif %}
 <script>
  function handleOpenDDate(){
    let inputDate = document.querySelector("#datepicker-container--static #datepicker--static");
    $(inputDate).focus();
  }
 </script>